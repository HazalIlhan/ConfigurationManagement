@model ConfigurationManagement.Models.ConfigurationItemViewModel

@{
    ViewData["Title"] = "Edit Configuration Item";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label"></label>
            <select asp-for="Type" class="form-select" required>
                <option value="string" selected="@Model.Type == " string"">string</option>
                <option value="int" selected="@Model.Type == " int"">int</option>
                <option value="bool" selected="@Model.Type == " bool"">bool</option>
                <option value="double" selected="@Model.Type == " double"">double</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Value" class="form-label"></label>
            <input asp-for="Value" class="form-control" required />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label asp-for="ApplicationName" class="form-label"></label>
            <input asp-for="ApplicationName" class="form-control" required />
            <span asp-validation-for="ApplicationName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
