@model List<ConfigurationManagement.Models.ConfigurationItemViewModel>

@{
    ViewData["Title"] = "Configuration Items";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="row g-3 mb-3">
        <div class="col-auto">
            <input type="text" name="filter" class="form-control" placeholder="Filter by name"
                   value="@ViewContext.HttpContext.Request.Query["filter"]" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create")" class="btn btn-success">New Item</a>
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Value</th>
                <th>Active</th>
                <th>Application</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Value</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>@item.ApplicationName</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" 
                           class="btn btn-sm btn-danger" 
                           onclick="return confirm('Are you sure you want to delete this item?');">
                           Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
